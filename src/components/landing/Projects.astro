<section class="bg-primary">
  <div class="px-8 2xl:max-w-7xl mx-auto py-6">
    <div class="space-y-2">
      <!-- Section Title and Decorative Elements -->
      <div
        class="h-0.5 bg-secondary"
        data-aos="fade-up"
        data-aos-duration="1000"
      >
      </div>
      <h3
        class="text-secondary text-base font-medium"
        data-aos="fade-up"
        data-aos-duration="1500"
      >
        <span class="font-bold">Communications</span>
        <span>materials</span>
      </h3>
    </div>
    <ul
      class="mx-auto grid grid-cols-1 sm:grid-cols-2 text-secondary md:grid-cols-3 lg:grid-cols-4 items-start gap-6 mt-8"
      role="list"
    >
      {
        communicationsProjects
          .sort((a: project, b: project) => {
            return b.date.getTime() - a.date.getTime();
          })
          .map((project, index) => (
            <li
              class="flow-root h-full"
              data-aos="fade-up"
              data-aos-duration={calculateAosDuration(index % 4)}
            >
              <a href={project.url}>
                <div class="h-full flex flex-col justify-between">
                  <div>
                    <img class="lg:mb-8 xl:mb-0 lg:pb-8" src={project.photo} />
